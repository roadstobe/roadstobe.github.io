<form action="/tasks/add" method="post" class="col s12 offset-s3" style="padding: 20px">
    <div class="input-field">
        <input placeholder="Title" id="title" type="text" class="validate" name="title">
        <label for="title">Title</label>
    </div>
    <div class="input-field">
        <input placeholder="task" id="task" type="text" class="validate" required name="task">
        <label for="task">Task</label>
        <span class="helper-text" data-error="enter task" data-success="right"></span>
    </div>
    <div class="input-field">
        <input type="text" id="time" class="datepicker validate" required name="time">
        <label for="time">Time</label>
        <span class="helper-text" data-error="choose time" data-success="right"></span>
    </div>
    <div class="switch">
        <label>
            ordinary
            <input type="checkbox" name="important">
            <span class="lever"></span>
            important
        </label>
    </div>
    <button class="btn right">Add task</button>
</form>