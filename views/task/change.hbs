<form action="/tasks/putChange" method="post">
    <input type="hidden" value="{{id}}" name="idTask">
        <div class="input-field">
            <input placeholder="Title" id="title" type="text" class="validate" name="title" value="{{task.title}}">
            <label for="title">Title</label>
        </div>
        <div class="input-field">
            <input placeholder="task" id="task" type="text" class="validate" required name="task" value="{{task.content}}">
            <label for="task">Task</label>
            <span class="helper-text" data-error="enter task" data-success="right"></span>
        </div>
        <div class="input-field">
            <input type="text" id="time" class="datepicker validate" required name="time" value="{{task.date}}">
            <label for="time">Time</label>
            <span class="helper-text" data-error="choose time" data-success="right"></span>
        </div>
        <div class="switch">
            <label>
                ordinary
                <input type="checkbox" name="important" {{#if task.important}} checked {{else}} {{/if}} ">
                <span class="lever"></span>
                important
            </label>
        </div>
        <div class="switch">
            <label>
                in process
                <input type="checkbox" name="complete" {{#if task.complete}} checked {{else}} {{/if}}>
                <span class="lever"></span>
                complete
            </label>
        </div>
        <button class="btn right">change</button>
</form>